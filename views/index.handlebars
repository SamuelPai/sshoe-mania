<!-- This is our Title and Header: -->
<h1 class="title">Customers</h1>
<p class="title">This page allows you to <b>insert</b> a new customer into the database, <b>delete</b> a customer, and <b>select</b> all customers</p>


<!-- Our Customer form where the user inputs data: -->
<form id="customer_form">
    <legend>Insert New Customer</legend>
    <div class="mb-3">
        <label for="userName" class="form-label">Customer Name</label>
        <input type="text" required="required" class="form-control" id="userName" aria-describedby="userName" placeholder="Wendy Smith">
    </div>
    <div class="mb-3">
        <label for="userEmail" class="form-label">Customer Email</label>
        <input type="email" class="form-control" id="userEmail" placeholder="wendy@example.com">
    </div>
    <div class="mb-3">
        <label for="userPhone" class="form-label">Customer Phone Number</label>
        <input type="text" pattern="[0-9-]{1,}" class="form-control" id="userPhone" placeholder="555-123-9654">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

 <div >
      <div style="margin: 20px">
        <div class="searchbar">
          <input id ="customer_search" class="search_input" type="text" name="" placeholder="Search Database by Customer Name...">
          <button id = "search_btn" class="btn btn-success">Search</button>
          <a href="#" class="search_icon"><i class="fas fa-search"></i></a>
        </div>
      </div>
    </div>

<!-- Here our table gets populated by the data from our database: -->
<table class="table table-hover"  id="customerTable">
    <tr>
        <th >Name</th>
        <th >Email</th>
        <th>Phone Number</th>
        <th> </th>
        <th> </th>

    </tr>
    <tbody id = "tbody">
        {{#each customer}}
        <tr id = {{this.id}}>
            <td class="table-data">{{this.customer_name}}</td>
            <td class="table-data">{{this.customer_email}}</td>
            <td class="table-data">{{this.customer_phone}}</td>
            <td class="table-data"><button class="btn btn-danger delete" onclick=deletecustomer({{this.customer_id}})>Delete</button></td>
            <td class="table-data makeButton"> <a href="/customers/{{this.customer_id}}"><button class="btn btn-primary" type="button" name="button">Update</button></a>
        </tr>
        {{/each}}
    </tbody>
</table>
