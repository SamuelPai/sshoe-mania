<form id ="update_customer">
  <div class="form-group" class="mb-3">
    <h1>Update {{customer_name}}</h1>
    <label>Customer Name</label>
    <input type="text" required="required" name="customer_name" class="form-control" value="{{customer_name}}"  size="40" id="customer_name">
  </div>
  <div class="form-group" class="mb-3">
    <label>Customer Email</label>
    <input type="email" name="customer_email" class="form-control" value="{{customer_email}}"  id="customer_email">
  </div>
  <div class="form-group" class="mb-3">
    <label>Customer Phone Number</label>
    <input  type="number" name="customer_phone" class="form-control" value="{{customer_phone}}"  id="customer_phone">
  </div>
  <br>
  <div>
    <button onclick=updateCustomer({{customer_id}})>Update</button>
  </div>
</form>
