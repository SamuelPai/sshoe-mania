

<form id ="update_product">
  <div class="form-group">
    <h1>Update {{product_name}}</h1>
    <label>Product Name</label>
    <input type="text" required="required" name="product_name" class="form-control" value="{{product_name}}"  size="40" id="product_name">
  </div>
  <div class="form-group">
    <label>Product Price</label>
    <input type="number" required="required" name="product_price" class="form-control" value="{{product_price}}"  id="product_price">
  </div>
  <div class="form-group">
    <label>Product Information</label>
    <input  type="text" required="required" name="product_information" class="form-control" value="{{product_information}}"  id="product_information">
  </div>
  <div class="form-group">
    <label>Stock Amount</label>
    <input  type="number" required="required" name="stock_amount" class="form-control" value="{{stock_amount}}"  id="stock_amount">
  </div>
  <br>
  <div>
    <button onclick=updateProduct({{product_id}})>Update</button>
  </div>
</form>
